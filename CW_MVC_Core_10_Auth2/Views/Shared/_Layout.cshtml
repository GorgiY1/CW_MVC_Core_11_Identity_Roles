@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] My App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CW_MVC_Core_10_Auth2.styles.css" asp-append-version="true" />
    <link href="~/css/Style1.css" rel="stylesheet" />
</head>
<body>
    <div class="form-container">
        
        <header>
            @if (User.Identity.IsAuthenticated)
            {
                <span>Hello, @User.Identity.Name</span>
                //@Html.AntiForgeryToken()
                <form asp-action="Logout" asp-controller="User" method="post">
                    <button type="submit">LogOut</button>
                </form>

                <div class="menu">
                    <a href="/">Home</a>
                    <a asp-controller="User" asp-action="Create">Create New</a>
                    <a asp-controller="User" asp-action="LogIn">LogIn</a>
                    <a asp-controller="User" asp-action="CreateRole">Create Role</a>
                </div>

                
        <!-- Card for Products -->

                <div class="menu">
                    <h1>Products</h1>
                    <a class="menu" asp-controller="Products" asp-action="Index">List of Products</a>

                    <a class="menu" asp-controller="Products" asp-action="Create">Create New Product</a>

                    <a class="menu" asp-controller="Products" asp-action="Update">Update Product</a>

                    <a class="menu" asp-controller="Products" asp-action="Delete">Delete Product</a>
                </div>
            }
            else 
            {
                <div class="menu">
                    <a href="/" >Home</a>
                    <a asp-controller="User" asp-action="Create" >Create New</a>
                    <a asp-controller="User" asp-action="LogIn">LogIn</a>
                </div>
            }
            
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
            
        </div>
        <footer class="border-top footer text-muted">
            <div>
                &copy; 2024 - Identity
            </div>
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
